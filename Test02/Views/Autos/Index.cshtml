@model IEnumerable<Test02.Models.Auto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="GET" asp-action="Index">
    <label>Suchen: </label>
    <input type="text" name="Suchen" id="Suchen" placeholder="Suchen nach" />
    <button type="submit">Suchen</button>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marke)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JahrHerstellung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laufleistung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypKraftstoff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zustand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JahrHerstellung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Laufleistung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypKraftstoff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zustand)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br />
Menge des Autos: @ViewData["qty"]
<br />
Bewertung der gesamten Waren: @ViewBag.Gesamtbewertung